// Views/Account/Settings.cshtml
@model db_query_v1._0._0._1.Models.SettingsViewModel

@{
    ViewData["Title"] = "Settings";
}

@if (TempData["SuccessMessage"] != null)
{
    @TempData["SuccessMessage"]
}
<div class="mb-3">
    <label asp-for="FirstName" class="form-label"></label>
    <input asp-for="FirstName" class="form-control" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="LastName" class="form-label"></label>
    <input asp-for="LastName" class="form-control" />
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Email" class="form-label"></label>
    <input asp-for="Email" class="form-control" readonly />
</div>

<div class="mb-3">
    <label asp-for="Phone" class="form-label"></label>
    <input asp-for="Phone" class="form-control" />
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Address" class="form-label"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="DateOfBirth" class="form-label"></label>
    <input asp-for="DateOfBirth" class="form-control" type="date" />
    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
</div>

@for (var i = 0; i < Model.Specializations.Count(); i++)
{
    <div class="mb-3">
        <label class="form-label">Specialization @(i + 1)</label>
        <input name="Specializations[@i]" value="@Model.Specializations[i]" class="form-control" />
    </div>
}

<button type="submit" class="btn btn-primary">Save Settings</button>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
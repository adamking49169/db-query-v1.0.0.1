                        </li>
                    </ul>

                    <div class="d-flex align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <span class="me-2 text-muted">Hello, @User.Identity?.Name</span>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary btn-sm me-2" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="btn btn-outline-secondary btn-sm" asp-controller="Account" asp-action="Register">Register</a>
                        }
                    </div>
                </div>
